  <script>
    // basic UI behaviours + localStorage persistence for suggestions & members
    const yearEl = document.getElementById('year'); yearEl.textContent = new Date().getFullYear();
    const membersEl = document.getElementById('members');
    const defaultMembers = ['AL','BP','CS','DM','EL','FN'];

    function renderMembers(){
      membersEl.innerHTML = '';
      const stored = JSON.parse(localStorage.getItem('pt_members')||'null');
      const list = stored || defaultMembers;
      list.forEach(n=>{
        const el = document.createElement('div'); el.className='avatar'; el.textContent = n;
        membersEl.appendChild(el);
      })
    }

    // suggestions
    const suggestForm = document.getElementById('suggestForm');
    const suggestionsList = document.getElementById('suggestionsList');
    function loadSuggestions(){
      const s = JSON.parse(localStorage.getItem('pt_suggestions')||'[]');
      suggestionsList.innerHTML='';
      s.forEach((it,idx)=>{
        const li = document.createElement('li'); li.innerHTML = `<strong>${escapeHtml(it.title)}</strong> — ${escapeHtml(it.author)} <div class="muted small">${escapeHtml(it.notes||'')}</div>`;
        suggestionsList.appendChild(li);
      })
    }

    suggestForm.addEventListener('submit', e=>{
      e.preventDefault();
      const title = document.getElementById('sTitle').value.trim();
      const author = document.getElementById('sAuthor').value.trim();
      const notes = document.getElementById('sNotes').value.trim();
      if(!title||!author) return;
      const arr = JSON.parse(localStorage.getItem('pt_suggestions')||'[]');
      arr.unshift({title,author,notes});
      localStorage.setItem('pt_suggestions', JSON.stringify(arr.slice(0,30)));
      loadSuggestions();
      suggestForm.reset();
    })

    // join form
    const joinForm = document.getElementById('joinForm');
    const joinMsg = document.getElementById('joinMsg');
    joinForm.addEventListener('submit', e=>{
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      if(!name||!email){ joinMsg.textContent='Please provide name and email.'; return; }
      // simple local "signup" — avoid sending data anywhere
      const mem = JSON.parse(localStorage.getItem('pt_members')||'[]');
      mem.push(name.split(' ').map(s=>s[0].toUpperCase()).join('').slice(0,2));
      localStorage.setItem('pt_members', JSON.stringify(mem));
      renderMembers();
      joinMsg.textContent='Thanks! You are signed up (locally). We will send meeting reminders.';
      joinForm.reset();
    })
    document.getElementById('saveLocal').addEventListener('click', ()=>{
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      if(!name||!email){ joinMsg.textContent='Enter name and email to save locally.'; return; }
      localStorage.setItem('pt_profile', JSON.stringify({name,email}));
      joinMsg.textContent='Saved locally — you can return to RSVP later.';
    })

    // poll
    const pollForm = document.getElementById('pollForm');
    pollForm.addEventListener('submit', e=>{
      e.preventDefault();
      const role = document.getElementById('pollRole').value;
      // naive count in localStorage
      const poll = JSON.parse(localStorage.getItem('pt_poll')||'{}');
      poll[role] = (poll[role]||0)+1;
      localStorage.setItem('pt_poll', JSON.stringify(poll));
      document.getElementById('pollResult').textContent = `Votes: ${Object.values(poll).reduce((a,b)=>a+b,0)} · Top: ${topChoice(poll)}`;
    })

    function topChoice(obj){
      const entries = Object.entries(obj);
      if(!entries.length) return '—';
      entries.sort((a,b)=>b[1]-a[1]);
      return entries[0][0];
    }

    // modal
    function openModal(which){
      const modal = document.getElementById('modal');
      const title = document.getElementById('modalTitle');
      const body = document.getElementById('modalBody');
      if(which==='book'){
        title.textContent='The Midnight Library — Matt Haig';
        body.innerHTML = '<em>The Midnight Library</em> explores regret, mental health, and the roads not taken. It is a short novel that sparks long conversation about choices and meaning.';
      }
      modal.classList.add('show');
    }
    function closeModal(){document.getElementById('modal').classList.remove('show')}
    document.getElementById('modal').addEventListener('click', e=>{ if(e.target.id==='modal') closeModal(); });

    function escapeHtml(s){ return (s+'').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }

    // init
    (function(){ renderMembers(); loadSuggestions();
      // populate poll summary if any
      const poll = JSON.parse(localStorage.getItem('pt_poll')||'{}');
      if(Object.keys(poll).length) document.getElementById('pollResult').textContent = `Votes: ${Object.values(poll).reduce((a,b)=>a+b,0)} · Top: ${topChoice(poll)}`;
      // fill next meeting date if stored
      const nm = localStorage.getItem('pt_next_meeting');
      if(nm) document.getElementById('nextMeetingDate').textContent = nm;
      // button hooks
      document.getElementById('joinBtn').addEventListener('click', ()=>{ location.hash='#join' });
      document.getElementById('suggestBtn').addEventListener('click', ()=>{ location.hash='#books' });
    })()

  </script>
</body>
</html>

